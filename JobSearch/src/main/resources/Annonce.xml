<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 5.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-5.0.dtd">
<hibernate-mapping>
  <class  name="com.needjob.model.Annonce" table="annonce">
      <id name="id" type="int" column="id_annonce">
          <generator class="native"/>
      </id>
      <property name="titre" column="titre_annonce" type="string"/>
      <property name="description" column="description_annonce" type="string"/>
      <property name="date_publication" column="date_publication_annonce" type="date"/>
  </class>
</hibernate-mapping>
